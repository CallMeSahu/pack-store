<%- include("./partials/header") %>
    <div class="w-full h-screen flex items-start px-10 py-20 overflow-hidden">
        <div class="w-1/4 h-screen">
            <div class="flex items-center gap-2 mt-5">
                <h3 class="text-lg">sort by</h3>
                <form action="/shop">
                    <select class="px-2 py-1 border-[1px] outline-blue-400" name="sortby">
                        <option value="newest">Newest</option>
                        <option value="popular">Popular</option>
                    </select>
                </form>
            </div>
            <div class="mt-20">
                <a class="block w-fit mb-2 text-xl" href="">New Collection</a>
                <a class="block w-fit mb-2 text-xl" href="">All Products</a>
                <a class="block w-fit mb-2 text-xl" href="">Discounted Products</a>
            </div>
            <div class="mt-20">
                <a class="block w-fit mb-2 text-xl" href="">Filter Products</a>
                <a class="block w-fit mb-2 text-xl" href="">All Products</a>
                <a class="block w-fit mb-2 text-xl" href="">Discounted Products</a>
            </div>
        </div>
        <div class="w-3/4 h-screen overflow-y-auto scrollbar-none">
            <div class="flex items-start gap-5 flex-wrap">
                <% products.forEach(product => { %>
                    <div class="w-60">
                        <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                            <img 
                                class="w-auto h-[75%] object-contain"
                                src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                        </div>
                        <div class="p-4 flex justify-between items-center bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                            <div>
                                <h3 class="font-semibold"><%= product.name %></h3>
                                <h4 class="font-normal">â‚¹<%= product.price %></h4>
                            </div>
                            <a class="w-7 h-7 flex justify-center items-center rounded-full bg-white" href="">
                                <i class="ri-add-line text-black"></i>
                            </a>
                        </div>
                    </div>
                <% }) %>                
            </div>
        </div>
    </div>
<%- include("./partials/footer") %>